{
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^1.12.2"
  },
  "scripts": {
    "dev:turbo": "turbo run dev",
    "dev:backend": "cd backend/noted/ && npm run dev",
    "dev:frontend": "cd frontend/noted/ && npm run dev",
    "start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "workspaces": [
    "backend/*",
    "frontend/*"
  ]
}
